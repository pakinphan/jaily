  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const sectionContainer = document.getElementById('sectionContainer');
      const addSectionBtn = document.querySelector('.add-section-btn');
      const delSectionBtn = document.querySelector('.del-section-btn');
      let sectionCount = 1; // Start with 1 paragraph
      const maxSections = 10;

      addSectionBtn.addEventListener('click', function () {
        // Check if the limit has been reached
        if (sectionCount < maxSections) {
          // Clone the existing section
          const newSection = sectionContainer.firstElementChild.cloneNode(true);

          // Increment the section count
          sectionCount++;

          // Change the name attribute of the textarea in the cloned section
          const textarea = newSection.querySelector('textarea');
          textarea.name = `paragraph_${sectionCount}`;
          textarea.id = `paragraph_${sectionCount}`; // Set a unique ID for the textarea
          textarea.value = ''; // Set an initial value

          // Append the cloned section below the existing one
          sectionContainer.appendChild(newSection);
        } else {
          // Optionally, you can provide some feedback to the user
          alert('Maximum limit of paragraphs reached (10 paragraphs)');
        }
      });

      delSectionBtn.addEventListener('click', function () {
        // Check if there are sections to delete
        if (sectionCount > 1) {
          // Remove the last section
          const sections = document.querySelectorAll('.paragraph');
          const lastSection = sections[sections.length - 1];

          // Remove the last section
          sectionContainer.removeChild(lastSection);

          // Decrement the section count
          sectionCount--;
        } else {
          // Optionally, you can provide some feedback to the user
          alert('You must have at least 1 paragraph');
        }
      });
    });
  </script>

