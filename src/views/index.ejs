                    </svg>
                </a>
                <% if (session && session.isLoggedIn && user) { %>
                    <!-- Display username instead of "Login" -->
                    <span class="text-primary font-black text-lg mx-6 my-2">
                        <%= user %><a href="/logout" class="text-gray-500 font-bold ml-4 hover:text-secondary focus:outline-none focus:ring-gray-200 dark:text-gray-400 dark:focus:ring-gray-600 text-xs rounded-lg">
                            Logout
                        </a>
                    </span>
                <% } else { %>
                    <!-- Display "Login" if user is not logged in -->
