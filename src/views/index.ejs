    <div class="dark:bg-gray-900 md:mt-16 lg:mt-12 mt-16 py-0 "
        style="background-image: url(/assets/images/background/gradient03.png);">
        <div class="carousel rounded-box mx-auto flex items-center">

            <% if (stories && stories.length> 0) { %>
                <% stories.forEach(story=> { %>
                    <div class="carousel-item w-full">
                        <div class="grid max-w-screen-xl px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-32 lg:grid-cols-12">
                            <div class="mr-auto place-self-center lg:col-span-7">
                                <div
                                    class="badge badge-outline text-secondary hover:text-white hover:bg-primary hover:border-primary dark:text-white dark:hover:text-gray-800 h-7">
                                    <%= story.content_category1 || 'Category 1' %>
                                </div>
                                <div
                                    class="badge badge-outline text-secondary hover:text-white hover:bg-primary hover:border-primary dark:text-white dark:hover:text-gray-800 h-7">
                                    <%= story.content_category2 || 'Category 2' %>
                                </div>

                                <h1
                                    class="max-w-2xl mt-3 mb-4 text-3xl font-bold tracking-tight leading-none md:text-4xl xl:text-4xl text-gray-800 dark:text-white">
                                    <%= story.content_title?.toString() || 'No story name available' %>
                                </h1>
                                <p
                                    class="w-96 max-w-2xl mb-6 font-light text-secondary lg:mb-8 md:text-md lg:text-md dark:text-gray-400">
                                    <%= story.content_description?.toString() || 'No description available' %>
                                </p>
                                <a href="/read/<%= story.content_id %>"
                                    class="inline-flex items-center justify-center px-5 py-3 mr-3 text-base font-medium text-center text-white rounded-lg bg-primary hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:focus:ring-primary-900">
                                    GO READ!
                                    <svg class="w-5 h-5 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20"
                                        xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd"
                                            d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                                            clip-rule="evenodd"></path>
                                    </svg>
                                </a>
                                <a href="#"
                                    class="inline-flex items-center justify-center px-5 py-3 text-base font-medium text-center text-secondary hover:text-white border border-gray-300 rounded-lg hover:bg-secondary focus:ring-4 hover:border-secondary focus:ring-gray-100 dark:text-white dark:border-gray-700 dark:hover:bg-gray-700 dark:focus:ring-gray-800 ">
                                    Add to collection +
                                </a>
                            </div>

                            <div class="hidden lg:mt-0 lg:col-span-5 lg:flex">
                                <img class="rounded-box w-96 h-60 object-cover"
                                    src="<%= story.content_cover || '/assets/images/default_cover.jpg' %>" alt="mockup">
                            </div>
                        </div>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <p>No stories found.</p>
                            <% } %>
        </div>
    </div>



    <div class="flex items-center justify-center">
        <div class="container">
            <div class="mx-6 sm:mx-2 md:mx-16 lg:mx-20">
                <div class="flex">
                    <div class="hidden md:hidden lg:flex w-2/4 sm:flex mx-80 sm:mx-2 md:mx-2">
                        <img class="h-5/6 ml-0 object-cover"
                            src="/assets/images/illustrate/Chubbs DrawKit_Vector_Illustrations-03.png" alt="mockup">
                    </div>

                    <div class="w-full">
                        <div>
                            <h1
                                class="text-secondary mb-2 text-3xl font-extrabold tracking-tight leading-none md:text-3xl xl:text-3xl dark:text-white">
                                TRENDING
                            </h1>
                            <hr class="h-0.5 w-full my-2 bg-secondary border-0 dark:bg-primary">
                        </div>

                        <% if (stories && stories.length > 0) { %>
                            <% stories.slice(0, 3).forEach(story => { %>
                        <a href="/read/<%= story.content_id %>">
                            <div class=" w-full my-8 flex justify-center items-center">
                                <div class="hidden md:flex text-6xl font-extrabold mr-6 text-info">#<%= story.content_id %></div>
                                <div
                                    class=" flex rounded-lg w-full bg-transparent shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] dark:bg-gray-800 md:max-w-xl md:flex-row transform transition-transform duration-300 hover:scale-105">

                                    <div class="w-36 flex-shrink-0">
                                        <img class="h-32 w-full object-cover rounded-box md:!rounded-box md:!rounded-box m-2"
                                            src="<%= story.content_cover %>" alt="" />
                                    </div>

                                    <div class="flex flex-col justify-start p-3 sm:p-6">
                                        <h5
                                            class="mb-2 h-8 overflow-hidden text-xs md:text-md lg:text-xl md:mb-6 lg:mb-8 font-medium text-neutral-800 dark:text-neutral-50">
                                            <%= story.content_title %>
                                        </h5>
                                        <div class="flex-row lg:flex">
                                            <p class="text-sm text-neutral-500 dark:text-neutral-300 mr-4">
                                                จินจู
                                            </p>
                                            <p class="text-xs text-neutral-500 dark:text-neutral-300">
                                                Last updated 3 mins ago
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                        <% }); %>
                        <% } else { %>
                            <p>No stories found.</p>
                            <% } %>


                    </div>
                </div>

            </div>
            <div class="flex flex-col sm:flex-row justify-center my-20">
                <div
                    class="h-32 sm:h-40 w-5/6 bg-transparent border-4 border-secondary rounded-xl flex flex-col justify-center m-5 mb-0  items-center text-center ">
                    <div class="flex justify-center transform transition-transform duration-300 hover:scale-105"> <img
                            class="h-16 sm:h-20" src="/assets/images/icons/ph_pen-light.png" alt="">
                        <h1 class="font-semibold text-6xl sm:text-7xl tracking-wider text-secondary font-kdam"> <%= totalRows %></h1>
                    </div>
                    <div class="font-semibold text-secondary ">STORIES</div>
                </div>
                <div
                    class="h-32 sm:h-40 w-5/6 bg-transparent border-4 border-secondary rounded-xl flex flex-col justify-center m-5 mb-0  items-center text-center ">
                    <div class="flex justify-center transform transition-transform duration-300 hover:scale-105"> <img
                            class="h-16 sm:h-20" src="/assets/images/icons/ph_pen-light.png" alt="">
                        <h1 class="font-semibold text-6xl sm:text-7xl tracking-widest text-secondary font-kdam">1</h1>
                    </div>
                    <div class="font-semibold text-secondary ">WRITERS</div>
                </div>
                <div
                    class="h-32 sm:h-40 w-5/6 bg-transparent border-4 border-secondary rounded-xl flex flex-col justify-center m-5 mb-0  items-center text-center ">
                    <div class="flex justify-center transform transition-transform duration-300 hover:scale-105"> <img
                            class="h-16 sm:h-20" src="/assets/images/icons/ph_pen-light.png" alt="">
                        <h1 class="font-semibold text-6xl sm:text-7xl tracking-widest text-secondary font-kdam"><%= totalRows_r %>
                        </h1>
                    </div>
                    <div class="font-semibold text-secondary ">READERS</div>
                </div>
            </div>



            <div>
                <div>
                    <div class="flex justify-between">
                        <h1
                            class="text-secondary mb-2 text-3xl font-extrabold tracking-tight leading-none md:text-3xl xl:text-3xl dark:text-white">
                            TODAY'S PICK
                        </h1>
                        <a href="/browse" class="mt-2 mb-0 ">
                            <p class="font-extrabold text-primary">SEE MORE</p>
                        </a>
                    </div>

                    <hr class="h-0.5 w-full my-2 bg-secondary border-0 dark:bg-primary">
                </div>



                <div class="flex flex-col md:flex-row justify-center mb-16 mt-8 ">
                    <% if (stories && stories.length > 0) { %>
                        <% stories.forEach(story => { %>
                           
                            <div
                        class="card w-5/6 bg-transparent shadow-xl m-3 transform transition-transform duration-300 hover:scale-105 mx-auto sm:mx-3">
                        <div class="w-46 h-60 flex-shrink-0">
                            <a href="/read/<%= story.content_id %>">
                            <img class="h-full w-full object-cover rounded-t-lg md:rounded-none md:rounded-l-lg"
                                src="<%= story.content_cover || '/assets/images/default_cover.jpg' %>" alt="" />
                            </a>
                        </div>
                        <div class="card-body flex flex-col justify-between">
                            <div>
                                <h2 class="card-title dark:text-gray-400">
                                    <%= story.content_title %>
                                        <div class="badge badge-secondary">NEW</div>
                                </h2>
                                <p class="dark:text-gray-400"><%= story.content_description %></p>
                            </div>
                            <div class="card-actions justify-end">
                                <div class="badge badge-outline dark:text-gray-400 h-8 overflow-hidden"><%= story.content_category1 %></div>
                                <div class="badge badge-outline dark:text-gray-400 h-8 overflow-hidden"><%= story.content_category2 %></div>
                            </div>
                        </div>
                    </div>
                
                    <% }); %>
                        <% } else { %>
                            <p>No stories found.</p>
                            <% } %>

                </div>


                <div>
                    <div>
                        <div class="flex justify-between">
                            <h1
                                class="text-secondary mb-2 text-3xl font-extrabold tracking-tight leading-none md:text-3xl xl:text-3xl dark:text-white">
                                FOR YOU
                            </h1>
                            <a href="Browse" class="mt-2 mb-0 ">
                                <p class="font-extrabold text-primary">SEE MORE</p>
                            </a>
                        </div>

                        <hr class="h-0.5 w-full my-2 bg-secondary border-0 dark:bg-primary">
                    </div>



                    <div class="flex flex-col md:flex-row justify-center">
                        <% if (query && query.length > 0) { %>
                            <% query.forEach(queri => { %>
                                
                        <div
                            class="card w-5/6 bg-transparent shadow-xl m-3 transform transition-transform duration-300 hover:scale-105 mx-auto sm:mx-3">
                            <div class="w-46 h-60 flex-shrink-0">
                                <a href="/read/<%= queri.content_id %>">
                                <img class="h-full w-full object-cover rounded-t-lg md:rounded-none md:rounded-l-lg"
                                    src="<%= queri.content_cover || '/assets/images/default_cover.jpg' %>" alt="" />
                                </a>
                            </div>
                            <div class="card-body flex flex-col justify-between">
                                <div>
                                    <h2 class="card-title dark:text-gray-400">
                                        <%= queri.content_title %>
                                            <div class="badge badge-secondary">NEW</div>
                                    </h2>
                                    <p class="dark:text-gray-400"><%= queri.content_description %></p>
                                </div>
                                <div class="card-actions justify-end">
                                    <div class="badge badge-outline dark:text-gray-400 h-8 overflow-hidden"><%= queri.content_category1 %></div>
                                    <div class="badge badge-outline dark:text-gray-400 h-8 overflow-hidden"><%= queri.content_category2 %></div>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                            <% } else { %>
                                <p>No stories found.</p>
                                <% } %>
                    </div>

                </div>

            </div>



        </div>

    </div>
    <div class="bg-secondary dark:bg-black w-full h-96 mt-36 flex flex-col justify-center items-center font-kdam">
        <div class="flex items-center">
            <div class="rounded-full h-16 w-16 bg-gray-800 flex items-center justify-center m-2">
                <a href="https://www.instagram.com/thurstiiiiiiiiiiiiiii/"><img class="h-9 w-9"
                        src="/assets/images/icons/instagram.png" alt=""></a>
            </div>
            <div class="rounded-full h-16 w-16 bg-gray-800 flex items-center justify-center m-2">
                <a href="https://github.com/pakinphan"> <img class="h-9 w-9" src="/assets/images/icons/github.png"
                        alt=""></a>
            </div>
            <div class="rounded-full h-16 w-16 bg-gray-800 flex items-center justify-center m-2">
                <a href="https://www.linkedin.com/in/pakin-phanthawaorchai-48a123289/"><img class="h-9 w-9"
                        src="/assets/images/icons//linkedin.png" alt=""></a>
            </div>
        </div>

        <div class="m-2"><a href="/" class="text-white font-regular">HOME</a><span class="text-dark-grey-900"> ·
                · </span><a href="/howto" class="text-white font-regular">FAQ</a><span class="text-dark-grey-900"> ·
            </span><a href="/tnc" class="text-white font-regular">TERMS&CONDITIONS</a></div>
        <div>
            <p class="dark:text-dark-grey-100">@ Jirapat & Pakin</p>
        </div>
    </div>


    <script>
        // JavaScript to handle the toggling of the menu items
        const button = document.querySelector('[data-collapse-toggle="navbar-sticky"]');
        const menu = document.getElementById('navbar-sticky');

        button.addEventListener('click', () => {
            menu.classList.toggle('hidden');
        });
    </script>


    <script src="/assets/js/darkmode.js"></script>
</body>

</html>